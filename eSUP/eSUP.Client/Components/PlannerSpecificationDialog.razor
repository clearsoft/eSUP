@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Create New Student Unit Planner</MudText>
    </TitleContent>
    <DialogContent>
        <MudPaper Class="p-4 mx-auto mt-4 border" Width="100%">
            <MudContainer Style="width:100%;background:white;">
                <MudGrid Spacing="1">
                    <MudItem xs="12">
                        <MudText>Use this form to create a new Student Unit Planner. You can adjust questions and other details as needed in the next step.  Click "Generate" to create the template</MudText>
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField Variant="Variant.Outlined" Style="background: white;" Immediate="true" Label="Planner Title" @bind-Value="dto.Title" For="@(() => dto.Title)" Adornment="Adornment.End" AdornmentIcon="" AdornmentAriaLabel="Show Password" Required="true" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudTextField Variant="Variant.Outlined" Style="background: white;" Immediate="true" Label="Number of Exercises" HelperText="Total number of exercises" @bind-Value="dto.NumberOfExercises" For="@(() => dto.NumberOfExercises)" Required="true" InputType="InputType.Number" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudTextField Variant="Variant.Outlined" Style="background: white;" Immediate="true" Label="Number of Questions" HelperText="Max questions in longest exercise" @bind-Value="dto.MaximumQuestionsPerExercise" For="@(() => dto.MaximumQuestionsPerExercise)" Required="true" InputType="InputType.Number" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudTextField Variant="Variant.Outlined" Style="background: white;" Immediate="true" Label="Number of Parts" HelperText="Max parts in longest question" @bind-Value="dto.MaximumPartsPerQuestion" For="@(() => dto.MaximumPartsPerQuestion)" InputType="InputType.Number" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudTextField Variant="Variant.Outlined" Style="background: white;" Immediate="true" Label="Exercise Title Template" HelperText="eg Ex 3$ where '$' is a letter" @bind-Value="dto.ExerciseTitleTemplate" For="@(() => dto.ExerciseTitleTemplate)" Required="true" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudTextField Variant="Variant.Outlined" Style="background: white;" Immediate="true" Label="Question Title Template" HelperText="eg Q# where '#' is a number" @bind-Value="dto.QuestionTitleTemplate" For="@(() => dto.QuestionTitleTemplate)" Required="true" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudTextField Variant="Variant.Outlined" Style="background: white;" Label="Part Title Template" HelperText="'%' for lower case letters" @bind-Value="dto.PartTitleTemplate" For="@(() => dto.PartTitleTemplate)" Required="true" />
                    </MudItem>
                    <MudItem xs="12">
                        <hr />
                    </MudItem>
                </MudGrid>
            </MudContainer>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton ButtonType="ButtonType.Button" Style="width:100%;" Variant="Variant.Outlined" Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton ButtonType="ButtonType.Button" Style="width:100%;" Variant="Variant.Filled" Color="Color.Success" OnClick="OK">Generate</MudButton>
    </DialogActions>
</MudDialog>